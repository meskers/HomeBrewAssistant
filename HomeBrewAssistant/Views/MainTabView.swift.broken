                    HStack {
                        Image(systemName: "book.fill")
                            .foregroundColor(.brewTheme)
                                            VStack(alignment: .leading) {
                        Text("recipes.title".localized)
                            .font(.title2)
                            .fontWeight(.bold)
                        if let recipe = selectedRecipeForBrewing {
