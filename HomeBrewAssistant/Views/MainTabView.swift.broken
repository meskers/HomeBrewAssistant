        if searchText.isEmpty {
            return recipes
        } else {
            return recipes.filter { recipe in
                recipe.name.localizedCaseInsensitiveContains(searchText) ||
                recipe.style.localizedCaseInsensitiveContains(searchText)
            }
        }
    }
    
